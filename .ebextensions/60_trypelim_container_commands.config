container_commands:
  01-proxy-pass:
    command: |
        echo ProxyPass \"/_couchdb/\" \"$COUCHDB_URL\" > /var/proxy/staging/nginx/conf.d/couchproxy.conf
        echo ProxyPassReverse \"/_couchdb/\" \"$COUCHDB_URL\" >> /var/proxy/staging/nginx/conf.d/couchproxy.conf
  02-restart-nginx:
    command: systemctl restart nginx
